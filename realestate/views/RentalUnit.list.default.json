{
    "name": "Rental Unit",
    "description": "This view is intended for displaying the list rental units.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "controller": "realestate_rentalunit-collect",
    "order": "center_id,order",
    "sort": "asc",
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "order",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "code",
                "width": "5%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "status",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "action_required",
                "width": "15%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "type",
                "width": "15%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "is_accomodation",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "has_prm_access",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "has_pvi_features",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "has_phi_support",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "rental_unit_category_id",
                "width": "15%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "center_id",
                "width": "15%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "capacity",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "extra",
                "width": "10%",
                "sortable": true,
                "visible": false
            },
            {
                "type": "field",
                "value": "has_parent",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "has_children",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "can_rent",
                "width": "10%",
                "sortable": true
            }
        ]
    }
}