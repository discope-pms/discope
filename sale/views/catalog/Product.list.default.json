{
    "name": "Products",
    "description": "This view is intended for displaying the list of products.",
    "access": {
        "groups": ["pos.default.user", "sale.default.user"]
    },
    "order": "sku,product_model_id",
    "sort": "asc",
    "header": {
        "actions": {
            "ACTION.CREATE" : [
                {
                    "view": "form.create",
                    "description": "overload form to use for product creation"
                }
            ]
        }
    },
    "actions": [
        {
            "id": "action.export-prices-csv",
            "label": "Export prices CSV",
            "description": "Export the products prices in a CSV file.",
            "controller": "sale_catalog_product_export-prices-csv",
            "confirm": false
        },
        {
            "id": "action.import-prices-csv",
            "label": "Import prices CSV",
            "description": "Import the products prices form a CSV file.",
            "controller": "sale_catalog_product_import-prices-csv",
            "confirm": false
        }
    ],
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "30%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "sku",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "label": "Product Model",
                "value": "product_model_id",
                "width": "20%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "is_pack",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "can_sell",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "grouping_code_id",
                "width": "10%",
                "sortable": true
            },
            {
                "type": "field",
                "value": "family_id",
                "width": "10%"
            }
        ]
    }
}