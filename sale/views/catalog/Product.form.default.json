{
    "name": "Product",
    "description": "A Product is a variant of a Product Model. There is always at least one Product for a given Product Model.",
    "access": {
        "groups": ["pos.default.user", "sale.default.user"]
     },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.products_Section",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "label",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "sku",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "label": "Product Model",
                                                "value": "product_model_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "100%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "can_sell",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_freebie_allowed",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_pack",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_own_price",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "allow_price_adaptation",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_age_range",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%",
                                                "visible": ["has_age_range", "=", false]
                                            },
                                            {
                                                "type": "field",
                                                "label": "Age range",
                                                "value": "age_range_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "has_rate_class",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "50%",
                                                "visible": ["has_rate_class", "=", false]
                                            },
                                            {
                                                "type": "field",
                                                "label": "Rate class",
                                                "value": "rate_class_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "grouping_code_id",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Prices",
                        "id": "section.prices_section",
                        "visible": [ [["is_pack", "=", false], ["state", "<>", "draft"]], [["has_own_price", "=", true], ["state", "<>", "draft"]] ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "prices_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "selection": {
                                                            "default": false,
                                                            "actions": [
                                                                {"id": "ACTION.EDIT_INLINE"},
                                                                {"id": "ACTION.DELETE"}
                                                            ]
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Activity",
                        "id": "section.activity",
                        "visible": ["is_activity", "=", true],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "25%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "is_fullday",
                                                "width": "100%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_billable",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "activity_category_id",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Camp",
                        "id": "section.camp",
                        "visible": ["is_camp", "=", true],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "25%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "camp_product_type",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Attributes",
                        "id": "section.attributes",
                        "visible": false,
                        "description": "Kaleo only uses the age_range",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "product_attributes_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.product"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Groups",
                        "id": "section.groups",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "groups_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Pack Products",
                        "id": "section.pack_lines",
                        "visible": [ ["is_pack", "=", true], ["state", "<>", "draft"] ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "pack_lines_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Pack Lines",
                        "id": "section.ref_pack_lines",
                        "visible": [ ["is_pack", "=", false], ["state", "<>", "draft"] ],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "ref_pack_lines_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "view": "list.pack"
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Config",
                        "id": "section.config",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "stat_section_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "analytic_section_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_activity",
                                                "width": "50%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_camp",
                                                "width": "50%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_supply",
                                                "width": "50%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_transport",
                                                "width": "50%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_rental_unit",
                                                "width": "50%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_meal",
                                                "width": "50%",
                                                "readonly": true
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_snack",
                                                "width": "50%",
                                                "readonly": true
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
