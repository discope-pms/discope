{
    "name": "Bank Statement",
    "description": "",
    "access": {
        "groups": ["sale.default.user"]
    },
    "actions": [
        {
            "id": "action.pending",
            "label": "Set pending",
            "description": "Set the bank statement as pending.",
            "controller": "sale_pay_bankstatement_do-unreconcile",
            "confirm": true,
            "visible": [
                ["status", "=", "reconciled"],
                ["finance.default.administrator", "in", "user.groups"]
            ]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "100%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "date",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "center_office_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "visible": false,
                                                "width": "0"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "25%",
                                        "align": "right",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "old_balance",
                                                "width": "100%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "new_balance",
                                                "width": "100%"
                                            }
                                        ]
                                    }

                                ]
                            },
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "statement_lines_ids",
                                                "width": "100%",
                                                "widget":{
                                                    "header": {
                                                        "selection": {
                                                            "default": false
                                                        },
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}