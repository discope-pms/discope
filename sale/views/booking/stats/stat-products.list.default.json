{
    "name": "Stat invoiced products",
    "description": "",
    "controller": "sale_booking_stats_stat-products",
    "header": {
        "actions": {
            "ACTION.CREATE" : false
        },
        "advanced_search": {
            "open": true
        }
    },
    "operations": {
        "total": {
            "qty": {
                "usage": "number/integer",
                "operation": "SUM"
            },
            "total": {
                "usage": "amount/money",
                "operation": "SUM"
            }
        }
    },
    "group_by": [
        { "field": "center_office" }
    ],
    "limit": 500,
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "center_office",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "name",
                "width": "50%"
            },
            {
                "type": "field",
                "value": "qty",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "total",
                "width": "10%",
                "widget": {
                    "usage": "amount/money:2"
                }
            },
            {
                "type": "field",
                "value": "price",
                "width": "10%",
                "widget": {
                    "usage": "amount/money:2"
                }
            }
        ]
    }
}
