{
    "name": "Booking Points",
    "description": "This view is intended for displaying the list of booking points.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "operations": {
        "total": {
          "points_value": {
            "usage": "numeric/float",
            "operation": "SUM",
            "suffix": ""
          }
        }
    },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "booking_id",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "customer_id",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "nb_paying_pers",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "nb_nights",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "points_value",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "booking_apply_id",
                "width": "10%"
            }
        ]
    }
}