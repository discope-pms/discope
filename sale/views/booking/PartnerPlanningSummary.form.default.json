{
    "name": "Partner planning summary",
    "description": "Form view for Partner planning summary.",
    "header": {
        "actions": {
            "ACTION.SAVE": [
                {
                    "id": "SAVE_AND_CONTINUE"
                },
                {
                    "id": "SAVE_AND_CLOSE"
                }
            ]
        }
    },
    "actions": [
        {
            "id": "action.send-mail",
            "label": "Send mail",
            "controller": "sale_booking_partnerplanningsummary_send-mail"
        },
        {
            "id": "action.refresh-mail-content",
            "label": "Refresh mail content",
            "controller": "sale_booking_partnerplanningsummary_refresh-mail-content"
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "partner_id",
                                                "width": "75%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_from",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_to",
                                                "width": "33%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.mail-to-send",
                        "label": "Mail content",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "mail_subject",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "mail_content",
                                                "width": "100%",
                                                "widget": {
                                                    "type": "text",
                                                    "height": 500,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "mail_remarks",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.mails",
                        "label": "Mails",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "mails_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
