{
    "name": "Booking Activities",
    "description": "This view is intended for displaying the list of booking activities related to a camp.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "header": {
        "layout": "inline",
        "actions": {
            "ACTION.CREATE_INLINE": [
                {
                    "view": true
                }
            ]
        }
    },
    "order": "activity_date,time_slot_order",
    "sort": "asc",
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "activity_date",
                "width": "20%",
                "visible": false
            },
            {
                "type": "field",
                "value": "time_slot_order",
                "width": "20%",
                "visible": false
            },
            {
                "type": "field",
                "value": "name",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "time_slot_id",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "camp_id",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "camp_group_id",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "counter",
                "width": "20%",
                "visible": false
            },
            {
                "type": "field",
                "value": "counter_total",
                "width": "20%",
                "visible":  false
            }
        ]
    }
}