{
    "name": "Guest List Item",
    "description": "Guest items are details about a person who is part of a booking and specify the booking line group",
    "access": {
        "groups": ["booking.default.user"]
     },
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "firstname",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "lastname",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "guest_list_id",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "booking_id",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "booking_line_group_id",
                                                "width": "33%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "label": "General info",
                        "id": "section.guest_info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "80%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "is_coordinator",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "gender",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "citizen_identification",
                                                "width": "30%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "date_of_birth",
                                                "width": "40%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_country",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_city",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_zip",
                                                "width": "20%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_street",
                                                "width": "40%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}