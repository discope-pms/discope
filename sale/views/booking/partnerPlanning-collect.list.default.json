{
    "name": "Partner planning",
    "description": "Advanced collector for partners booking activities planning.",
    "access": {
        "groups": ["booking.default.user"]
    },
    "header": {
        "actions": {
            "ACTION.CREATE": false
        },
        "selection": {
            "default" : false,
            "actions" : [
                {
                    "id": "action.create-partner-planning-summary",
                    "label": "Create summary",
                    "description": "Creates an activities summary for the selected partners.",
                    "controller": "sale_booking_create-partner-planning-summary"
                }
            ]
        }
    },
    "controller": "sale_booking_partnerPlanning-collect",
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "id",
                "width": "10%",
                "visible": false
            },
            {
                "id": "item.employee_id",
                "type": "field",
                "value": "employee_id",
                "width": "20%"
            },
            {
                "id": "item.provider_id",
                "type": "field",
                "value": "provider_id",
                "width": "20%"
            },
            {
                "type": "field",
                "value": "relationship",
                "width": "20%",
                "visible": false
            },
            {
                "type": "field",
                "value": "activities_qty",
                "width": "20%"
            }
        ]
    }
}
