{
    "name": "Funding",
    "description": "",
    "access": {
        "groups": ["booking.default.user"]
    },
    "routes": [],
    "actions": [
        {
            "id": "action.pay_instant",
            "label": "Instant payment",
            "description": "This will complete the funding with a manual payment (card) and Funding will be marked as paid.",
            "controller": "sale_booking_funding_do-pay-append",
            "confirm": true,
            "access": {
                "groups": ["finance.default.administrator", "finance.default.user"]
            },
            "visible": [[true, "=", "env.sale.features.payment.instant"], ["is_paid", "=", false]]
        },
        {
            "id": "action.unpay_instant",
            "label": "Undo payment",
            "description": "This will remove any manual payment and Funding will be unmarked as paid.",
            "controller": "sale_booking_funding_do-pay-remove",
            "confirm": true,
            "access": {
                "groups": ["finance.default.administrator", "finance.default.user"]
            },
            "visible": ["is_paid", "=", true]
        },
        {
            "id": "action.delete",
            "label": "Delete",
            "description": "Delete a refund funding.",
            "controller": "sale_booking_funding_do-delete",
            "confirm": true,
            "access": {
                "groups": ["finance.default.administrator", "finance.default.user", "booking.default.user"]
            },
            "visible": [["type", "<>", "invoice"], ["due_amount", "<", 0]]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "50%",
                                                "widget": {
                                                    "heading": true,
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "description",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.funding",
                        "label": "General Info",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "label": "Enrollment",
                                                "value": "enrollment_id",
                                                "width": "100%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "type",
                                                "width": "33%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "33%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_paid",
                                                "width": "33%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "paid_amount",
                                                "width": "33%",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "center_office_id",
                                                "visible": false,
                                                "width": "0",
                                                "widget": {
                                                    "readonly": true
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "due_amount",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "due_date",
                                                "width": "50%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "id": "section.payments",
                        "label": "Payments",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "payments_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "domain": ["status", "=", "paid"],
                                                    "view": "list.funding",
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE" : false
                                                        },
                                                        "selection": false
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    },
                    {
                        "label": "Bank Checks",
                        "id": "section.bankchecks",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "bank_check_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
