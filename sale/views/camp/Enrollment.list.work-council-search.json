{
    "name": "Enrollments",
    "description": "This view is intended for displaying the list of works councils' enrollments.",
    "controller": "sale_camp_collect-works-councils-enrollments",
    "header": {
        "advanced_search": {
            "open": true
        }
    },
    "order": "created",
    "sort": "desc",
    "operations": {
        "total": {
            "price": {
                "operation": "SUM",
                "usage": "amount/money:2"
            }
        }
    },
    "domain": ["works_council_id", "<>", null],
    "group_by": [{"field": "works_council_id", "operation": ["SUM", "object.price"]}],
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "id",
                "width": "5%",
                "sortable": false,
                "readonly": true,
                "visible": false
            },
            {
                "type": "field",
                "value": "works_council_id",
                "width": "20%",
                "sortable": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "child_id",
                "width": "20%",
                "sortable": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "camp_id",
                "width": "20%",
                "sortable": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "date_from",
                "width": "20%",
                "sortable": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "date_to",
                "width": "20%",
                "sortable": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "status",
                "width": "20%",
                "sortable": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "is_ase",
                "width": "20%",
                "sortable": false,
                "readonly": true,
                "visible": false
            },
            {
                "type": "field",
                "value": "price",
                "width": "20%",
                "sortable": false,
                "readonly": true
            }
        ]
    }
}