{
    "name": "Price adapters",
    "description": "This view is intended for displaying the list of sponsors' price adapters.",
    "controller": "sale_camp_price_collect-price-adapters",
    "header": {
        "selection": {
            "default" : false,
            "actions" : [
                {
                    "id": "action.invoice-sponsor",
                    "label": "Facturer Aidant",
                    "description": "Invoice price adapters to sponsors.",
                    "controller": "sale_camp_price_invoice-sponsor",
                    "visible": ["camp.default.administrator", "in", "user.groups"]
                }
            ]
        },
        "advanced_search": {
            "open": true
        }
    },
    "operations": {
        "total": {
            "value": {
                "operation": "SUM",
                "usage": "amount/money:2"
            }
        }
    },
    "group_by": [{"field": "sponsor_id", "operation": ["SUM", "object.value"]}],
    "actions": [
        {
            "id": "action.print-list",
            "label": "Imprimer aides communes",
            "controller": "sale_camp_price_print-price-adapters",
            "visible": ["camp.default.administrator", "in", "user.groups"]
        }
    ],
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "id",
                "width": "5%",
                "sortable": false,
                "readonly": true,
                "visible": false
            },
            {
                "type": "field",
                "value": "sponsor_id",
                "width": "20%",
                "sortable": false,
                "visible": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "enrollment_id",
                "width": "20%",
                "sortable": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "origin_type",
                "width": "20%",
                "sortable": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "name",
                "width": "20%",
                "sortable": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "description",
                "width": "20%",
                "sortable": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "price_adapter_type",
                "width": "10%",
                "sortable": false,
                "readonly": true
            },
            {
                "type": "field",
                "value": "value",
                "width": "10%",
                "sortable": false,
                "readonly": true
            }
        ]
    }
}