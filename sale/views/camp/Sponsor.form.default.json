{
    "name": "Sponsor",
    "description": "Form view for sponsor.",
    "header": {
        "actions": {
            "ACTION.EDIT": {
                "visible": ["camp.default.administrator", "in", "user.groups"]
            }
        }
    },
    "actions": [
        {
            "id": "action.print-invoice",
            "label": "Invoice",
            "controller": "sale_camp_print-sponsor-invoice",
            "visible": ["camp.default.administrator", "in", "user.groups"]
        }
    ],
    "routes": [
        {
            "id": "route.print-year-invoice",
            "label": "Year invoice",
            "description": "",
            "icon": "receipt",
            "route": "/?get=sale_camp_print-sponsor-invoice&id=object.id",
            "target": "_blank",
            "absolute": true
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "name",
                                                "width": "60%",
                                                "widget": {
                                                    "heading": true
                                                }
                                            },
                                            {
                                                "type": "field",
                                                "value": "complete_name",
                                                "width": "80%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "sponsor_type",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "label",
                                                "value": "",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "amount",
                                                "width": "25%"
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "address_street",
                                                "width": "80%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_dispatch",
                                                "width": "80%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_zip",
                                                "width": "25%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "address_city",
                                                "width": "33%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.price-adapters",
                        "label": "Price adapters",
                        "visible": ["state", "<>", "draft"],
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "price_adapters_ids",
                                                "width": "100%",
                                                "widget": {
                                                    "header": {
                                                        "actions": {
                                                            "ACTION.CREATE": false
                                                        },
                                                        "selection": {
                                                            "default": false,
                                                            "actions": [
                                                                {
                                                                    "id": "action.invoice-selected",
                                                                    "label": "Invoice",
                                                                    "controller": "sale_camp_sponsor_generate-invoice-pdf",
                                                                    "visible": ["camp.default.administrator", "in", "user.groups"]
                                                                }
                                                            ]
                                                        }
                                                    }
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}