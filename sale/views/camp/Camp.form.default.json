{
    "name": "Camp",
    "header": {
        "actions": {
            "ACTION.EDIT": {
                "visible": ["camp.default.administrator", "in", "user.groups"]
            },
            "ACTION.SAVE": [
                {
                    "id": "SAVE_AND_CONTINUE"
                },
                {
                    "id": "SAVE_AND_CLOSE"
                }
            ]
        }
    },
    "actions": [
        {
            "id": "action.transition.publish",
            "label": "Publish",
            "controller": "model_transition",
            "params": {
                "entity": "sale\\camp\\Camp",
                "transition": "publish",
                "ids": []
            },
            "visible": [
                ["status", "=", "draft"],
                ["camp.default.administrator", "in", "user.groups"]
            ]
        },
        {
            "id": "action.transition.cancel",
            "label": "Cancel",
            "controller": "model_transition",
            "params": {
                "entity": "sale\\camp\\Camp",
                "transition": "cancel",
                "ids": []
            },
            "visible": [
                ["status", "in", ["draft", "published"]],
                ["camp.default.administrator", "in", "user.groups"]
            ]
        },
        {
            "id": "action.clone-group",
            "label": "Clone group",
            "controller": "sale_camp_clone-group",
            "params": {
                "id": "object.id"
            },
            "visible": [
                ["status", "in", ["draft", "published"]],
                ["camp_group_qty", ">", 0],
                ["camp.default.administrator", "in", "user.groups"]
            ]
        }
    ],
