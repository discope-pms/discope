            "params": {
                "entity": "sale\\camp\\Enrollment",
                "transition": "confirm",
                "ids": []
            },
            "visible": [
                ["status", "=", "pending"]
            ]
        },
        {
            "id": "action.transition.cancel",
            "label": "Cancel",
            "controller": "model_transition",
            "params": {
                "entity": "sale\\camp\\Enrollment",
                "transition": "cancel",
                "ids": []
            },
            "visible": [
                ["status", "in", ["waitlisted", "pending", "confirm"]]
