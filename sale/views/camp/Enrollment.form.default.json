{
    "name": "Enrollment",
    "description": "Form view for Enrollment.",
    "actions": [
        {
            "id": "action.transition.pending",
            "label": "Set Pending",
            "controller": "model_transition",
            "params": {
                "entity": "sale\\camp\\Enrollment",
                "transition": "pending",
                "ids": []
            },
            "visible": [
                ["status", "=", "waitlisted"]
            ]
        }
    ],
    "layout": {
        "groups": [
            {
                "sections": [
                    {
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "child_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "camp_id",
                                                "width": "50%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "is_ase",
                                                "width": "33%"
                                            },
                                            {
                                                "type": "field",
                                                "value": "status",
                                                "width": "33%",
                                                "visible": ["state", "=", "draft"],
                                                "selection": {
                                                    "pending": "Pending",
                                                    "waitlisted": "Waitlisted"
                                                }
                                            }
                                        ]
                                    },
                                    {
                                        "width": "50%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "total",
                                                "width": "33%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            },
            {
                "sections": [
                    {
                        "id": "section.documents",
                        "label": "Documents",
                        "rows": [
                            {
                                "columns": [
                                    {
                                        "width": "100%",
                                        "items": [
                                            {
                                                "type": "field",
                                                "value": "documents_ids",
                                                "width": "100%"
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                ]
            }
        ]
    }
}
