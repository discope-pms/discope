{
    "name": "Enrollment",
    "description": "Form view for Enrollment.",
    "routes": [
        {
            "id": "item.preregistration.send",
            "label": "Envoi pré-inscription",
            "description": "Envoyer la confirmation de pré-inscription.",
            "icon": "email",
            "route": "/child/object.child_id/preregistration",
            "visible": ["status", "=", "pending"]
        },
        {
            "id": "item.confirmation.send",
            "label": "Envoi confirmation",
            "description": "Envoyer la confirmation d'inscription.",
            "icon": "email",
            "route": "/enrollment/object.id/confirmation",
            "visible": ["status", "=", "confirmed"]
        }
    ],
    "header": {
        "actions": {
            "ACTION.SAVE": [
                {
                    "id": "SAVE_AND_CONTINUE"
                },
                {
                    "id": "SAVE_AND_CLOSE"
                }
            ]
        }
    },
    "actions": [
        {
            "id": "action.transition.pending",
            "label": "Set pending",
            "controller": "model_transition",
            "params": {
                "entity": "sale\\camp\\Enrollment",
                "transition": "pending",
                "ids": []
            },
            "visible": [
                ["status", "=", "waitlisted"],
                ["state", "<>", "draft"]
            ]
        },
        {
            "id": "action.transition.confirm",
            "label": "Confirm",
            "controller": "model_transition",
            "params": {
                "entity": "sale\\camp\\Enrollment",
                "transition": "confirm",
                "ids": []
            },
            "visible": [
                ["status", "=", "pending"],
                ["state", "<>", "draft"]
            ]
        },
        {
            "id": "action.transition.cancel",
            "label": "Cancel",
            "controller": "model_transition",
            "params": {
                "entity": "sale\\camp\\Enrollment",
                "transition": "cancel",
                "ids": []
            },
            "visible": [
                ["status", "in", ["waitlisted", "pending", "confirmed"]],
                ["state", "<>", "draft"]
            ]
        },
        {
            "id": "action.transfer",
            "label": "Transfer",
            "controller": "sale_camp_transfer-enrollment",
            "visible": [
                ["status", "<>", "canceled"],
                ["state", "<>", "draft"]
            ]
        }
    ],
