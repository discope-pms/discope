{
    "name": "Customers",
    "description": "This view is intended for displaying basic listing of existing Customers.",
    "domain": ["relationship", "=", "customer"],
    "access": {
        "groups": ["sale.default.user", "booking.default.user"]
     },
    "layout": {
        "items": [
            {
                "type": "field",
                "value": "name",
                "width": "25%",
                "widget": {
                    "wrap": true
                }
            },
            {
                "type": "field",
                "label": "Address",
                "value": "address",
                "width": "35%"
            },
            {
                "type": "field",
                "label": "Type",
                "value": "customer_nature_id",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Type",
                "value": "customer_type_id",
                "width": "15%",
                "widget": {
                    "wrap": true
                }
            },
            {
                "type": "field",
                "label": "Rate class",
                "value": "rate_class_id",
                "width": "15%"
            },
            {
                "type": "field",
                "label": "Lang",
                "value": "lang_id",
                "width": "10%"
            },
            {
                "type": "field",
                "value": "relationship",
                "width": "10%",
                "visible": false
            }
        ]
    }
}